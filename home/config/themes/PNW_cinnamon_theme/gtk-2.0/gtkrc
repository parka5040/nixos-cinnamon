    bg[INSENSITIVE] = @bg_color

    fg[NORMAL] = @fg_color
    fg[PRELIGHT] = @fog_light
    fg[SELECTED] = @fog_light
    fg[ACTIVE] = @fg_color
    fg[INSENSITIVE] = @insensitive_fg_color

    text[NORMAL] = @text_color
    text[PRELIGHT] = @fog_light
    text[SELECTED] = @fog_light
    text[ACTIVE] = @text_color
    text[INSENSITIVE] = @insensitive_fg_color

    engine "murrine" {
        roundness = 6
    }
}

