    fg[ACTIVE] = @fg_color

    engine "murrine" {
        roundness = 0
    }
}

style "menuitem" = "menu" {
    xthickness = 2
    ythickness = 3

    bg[PRELIGHT] = @fog_grey
    bg[SELECTED] = @fog_grey
    bg[ACTIVE] = @forest_green

    fg[PRELIGHT] = @fog_light
    fg[SELECTED] = @fog_light

    engine "murrine" {
        border_shades = {1.0, 1.0}
        contrast = 0.8
        glowstyle = 0
        roundness = 4
    }
}

style "separator_menu_item" {
    xthickness = 1
    ythickness = 1

    GtkSeparatorMenuItem::horizontal-padding = 0
    GtkWidget::wide-separators = 1
    GtkWidget::separator-width = 1
    GtkWidget::separator-height = 1

    engine "murrine" {
        contrast = 0.5
        separatorstyle = 0
    }
}

style "treeview" {
    bg[NORMAL] = @base_color
    bg[PRELIGHT] = @bg_color
    bg[ACTIVE] = @forest_green
    bg[SELECTED] = @forest_green

    fg[NORMAL] = @text_color
    fg[PRELIGHT] = @fg_color
