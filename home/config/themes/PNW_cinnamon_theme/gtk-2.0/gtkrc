# PNW Cinnamon GTK-2.0 Theme
# References shared SVG assets from ../assets/svg/

# Color Definitions - Pacific Northwest Palette
gtk-color-scheme = "fg_color:#eff1f3\nbg_color:#3d4d5c"
gtk-color-scheme = "text_color:#eff1f3\nbase_color:#2b3339"
gtk-color-scheme = "selected_fg_color:#eff1f3\nselected_bg_color:#4a5f5a"
gtk-color-scheme = "tooltip_fg_color:#eff1f3\ntooltip_bg_color:#2b3339"

# Additional PNW Colors
gtk-color-scheme = "forest_green:#4a5f5a"
gtk-color-scheme = "fog_grey:#505d6d"
gtk-color-scheme = "storm_blue:#3d4d5c"
gtk-color-scheme = "mist:#c5d0d9"
gtk-color-scheme = "sunset_orange:#d4977d"
gtk-color-scheme = "sunset_glow:#e8b299"
gtk-color-scheme = "cedar:#a68a7b"
gtk-color-scheme = "deep_shadow:#2b3339"
gtk-color-scheme = "mid_grey:#65737e"
gtk-color-scheme = "fog_light:#eff1f3"

# Disabled Colors
gtk-color-scheme = "insensitive_fg_color:#65737e\ninsensitive_bg_color:#3d4d5c"

# Link Colors
gtk-color-scheme = "link_color:#d4977d\nvisited_link_color:#a68a7b"

# Widget Styles
style "default" {
    GtkWidget::interior-focus = 1
    GtkWidget::focus-line-width = 1
    GtkWidget::focus-padding = 0

    GtkButton::default-border = {0, 0, 0, 0}
    GtkButton::default-outside-border = {0, 0, 0, 0}
    GtkButton::child-displacement-x = 0
    GtkButton::child-displacement-y = 0

    GtkCheckButton::indicator-size = 18
    GtkRadioButton::indicator-size = 18

    GtkScrollbar::min-slider-length = 30
    GtkScrollbar::slider-width = 12
    GtkScrollbar::trough-border = 0
    GtkScrollbar::has-backward-stepper = 0
    GtkScrollbar::has-forward-stepper = 0

    GtkRange::trough-border = 0
    GtkRange::slider-width = 16
    GtkRange::stepper-size = 0

    GtkScale::slider-length = 16
    GtkScale::slider-width = 16
    GtkScale::trough-side-details = 1

    GtkScrolledWindow::scrollbar-spacing = 0
    GtkScrolledWindow::scrollbars-within-bevel = 1

    GtkTreeView::expander-size = 16
    GtkTreeView::vertical-separator = 4
    GtkTreeView::horizontal-separator = 4
    GtkTreeView::allow-rules = 1

    GtkToolbar::internal-padding = 4
    GtkToolbar::shadow-type = GTK_SHADOW_NONE

    GtkMenu::horizontal-padding = 0
    GtkMenu::vertical-padding = 0

    GtkMenuItem::horizontal-padding = 8
    GtkMenuItem::toggle-spacing = 8

    GtkSeparatorMenuItem::horizontal-padding = 0

    xthickness = 1
    ythickness = 1

    fg[NORMAL] = @fg_color
    fg[PRELIGHT] = @fog_light
    fg[ACTIVE] = @fg_color
    fg[SELECTED] = @selected_fg_color
    fg[INSENSITIVE] = @insensitive_fg_color

    bg[NORMAL] = @bg_color
    bg[PRELIGHT] = @fog_grey
    bg[ACTIVE] = @forest_green
    bg[SELECTED] = @selected_bg_color
    bg[INSENSITIVE] = @insensitive_bg_color

    text[NORMAL] = @text_color
    text[PRELIGHT] = @fg_color
    text[ACTIVE] = @selected_fg_color
    text[SELECTED] = @selected_fg_color
    text[INSENSITIVE] = @insensitive_fg_color

    base[NORMAL] = @base_color
    base[PRELIGHT] = @bg_color
    base[ACTIVE] = @forest_green
    base[SELECTED] = @selected_bg_color
    base[INSENSITIVE] = @insensitive_bg_color

    engine "murrine" {
        animation = TRUE
        arrowstyle = 1          # 0 = normal, 1 = filled
        border_shades = {1.0, 0.8}
        colorize_scrollbar = FALSE
        comboboxstyle = 0       # 0 = normal, 1 = colorized
        contrast = 0.6
        focusstyle = 3          # 0 = none, 1 = grey, 2 = colored, 3 = glow
        glazestyle = 0          # 0 = flat, 1 = curved, 2 = concave, 3 = top-curved, 4 = beryl
        glowstyle = 4           # 0 = none, 1 = top, 2 = bottom, 3 = top and bottom, 4 = center
        glow_shade = 1.1
        gradient_shades = {1.05, 1.0, 1.0, 0.95}
        highlight_shade = 1.0
        lightborder_shade = 1.1
        lightborderstyle = 1    # 0 = top, 1 = all sides
        listviewheaderstyle = 1 # 0 = flat, 1 = glassy, 2 = raised
        listviewstyle = 1       # 0 = nothing, 1 = dotted, 2 = line
        menubaritemstyle = 0    # 0 = menuitem, 1 = button
        menubarstyle = 0        # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
        menuitemstyle = 0       # 0 = flat, 1 = glassy, 2 = striped
        menustyle = 0           # 0 = none, 1 = vertical striped
        progressbarstyle = 0    # 0 = none, 1 = diagonal striped, 2 = vertical striped
        reliefstyle = 0         # 0 = flat, 1 = inset, 2 = shadow, 3 = shadow with gradient, 4 = stronger shadow
        roundness = 4           # 0 = square
        scrollbarstyle = 0      # 0 = none, 1 = circles, 2 = handles, 3 = diagonal stripes, 4 = diagonal stripes and handles, 5 = horizontal stripes, 6 = horizontal stripes and handles
        sliderstyle = 0         # 0 = none, 1 = handles
        stepperstyle = 1        # 0 = standard, 1 = integrated stepper handles
        toolbarstyle = 0        # 0 = flat, 1 = glassy, 2 = gradient

        # Sunset glow on focus
        focus_color = @sunset_orange
        rgba = FALSE
    }
}

style "button" {
    xthickness = 2
    ythickness = 2

    bg[NORMAL] = @bg_color
    bg[PRELIGHT] = @fog_grey
    bg[ACTIVE] = @forest_green
    bg[SELECTED] = @forest_green
    bg[INSENSITIVE] = @insensitive_bg_color

    engine "murrine" {
        contrast = 0.8
        focusstyle = 3
        glowstyle = 4
        glow_shade = 1.2
        lightborder_shade = 1.2
        roundness = 4
    }
}

style "scrollbar" {
    bg[NORMAL] = @bg_color
    bg[PRELIGHT] = @mid_grey
    bg[ACTIVE] = @fog_grey

    engine "murrine" {
        border_shades = {1.0, 1.0}
        contrast = 0.0
        roundness = 6
        trough_shades = {0.9, 0.9}
        trough_border_shades = {1.0, 1.0}
    }
}

style "scale" {
    bg[NORMAL] = @bg_color
    bg[PRELIGHT] = @sunset_orange
    bg[ACTIVE] = @sunset_orange
    bg[SELECTED] = @sunset_orange

    engine "murrine" {
        border_shades = {1.0, 1.0}
        contrast = 0.6
        focusstyle = 3
        glowstyle = 4
        glow_shade = 1.2
        roundness = 8
        trough_shades = {0.9, 0.9}
        trough_border_shades = {0.8, 0.8}
    }
}

style "progressbar" {
    xthickness = 0
    ythickness = 0

    fg[PRELIGHT] = @fg_color
    bg[NORMAL] = @bg_color
    bg[SELECTED] = @sunset_orange

    engine "murrine" {
        border_shades = {1.0, 1.0}
        contrast = 0.6
        glowstyle = 4
        glow_shade = 1.2
        gradient_shades = {1.1, 1.0, 1.0, 0.9}
        lightborderstyle = 1
        lightborder_shade = 1.2
        progressbarstyle = 0
        roundness = 4
        trough_border_shades = {0.9, 0.9}
    }
}

style "entry" {
    xthickness = 2
    ythickness = 2

    base[NORMAL] = @base_color
    base[PRELIGHT] = @base_color
    base[ACTIVE] = @base_color
    base[SELECTED] = @sunset_orange
    base[INSENSITIVE] = shade(0.9, @insensitive_bg_color)

    engine "murrine" {
        border_shades = {1.0, 1.0}
        contrast = 0.6
        focusstyle = 3
        focus_color = @sunset_orange
        roundness = 4
    }
}

style "spinbutton" = "entry" {
    engine "murrine" {
        contrast = 0.8
    }
}

style "notebook" {
    xthickness = 2
    ythickness = 2

    bg[NORMAL] = @bg_color
    bg[ACTIVE] = shade(0.9, @bg_color)

    engine "murrine" {
        contrast = 0.8
        focusstyle = 2
        roundness = 4
    }
}

